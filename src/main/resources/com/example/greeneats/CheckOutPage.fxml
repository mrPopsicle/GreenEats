<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainContainer" prefHeight="670.0" prefWidth="802.0" stylesheets="@../../../styles.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <!-- Header Section -->
      <HBox fx:id="headerSection" alignment="CENTER_LEFT" spacing="15.0" styleClass="header-container">
         <children>
            <Label fx:id="titleLabel" styleClass="main-title" text="Cart" />
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
         </padding>
      </HBox>

      <!-- Data Table Section -->
      <VBox fx:id="tableSection" styleClass="content-card" VBox.vgrow="ALWAYS">
         <children>

            <!-- Data Table -->
            <TableView fx:id="nutritionTable" prefHeight="426.0" prefWidth="722.0" styleClass="data-table" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="itemColumn2" prefWidth="200.0" text="Picture" />
                  <TableColumn fx:id="itemColumn" prefWidth="200.0" text="Meal Item" />
                  <TableColumn fx:id="itemColumn1" prefWidth="200.0" text="Description" />
                  <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Price" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="CENTER" prefHeight="40.0" prefWidth="782.0" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="8.0" prefWidth="70.0" text="Check out" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="25.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
