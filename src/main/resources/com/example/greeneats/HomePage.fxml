                        <Label alignment="TOP_LEFT" prefHeight="299.0" prefWidth="483.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Featured Something" />
                        <Button mnemonicParsing="false" opacity="0.0" prefHeight="376.0" prefWidth="512.0" text="Button" />
                     </children>
                  </StackPane>
               </children>
            </VBox>
            <VBox prefHeight="289.0" prefWidth="466.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20; -fx-min-width: 400;">
               <children>
                  <StackPane prefHeight="247.0" prefWidth="489.0">
                     <children>
                        <Label alignment="TOP_LEFT" prefHeight="388.0" prefWidth="544.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Featured Something" />
                        <Button mnemonicParsing="false" opacity="0.0" prefHeight="376.0" prefWidth="512.0" text="Button" />
                     </children>
                  </StackPane>
               </children>
